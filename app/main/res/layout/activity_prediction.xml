<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".BeetrootPredictionActivity">
<ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="195dp"
            app:srcCompat="@drawable/beetroot"
            tools:ignore="ContentDescription" />

    <TableLayout
        android:layout_width="348dp"
        android:layout_height="352dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="215dp">


        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/col1"
                android:layout_width="188dp"
                android:layout_height="33dp"
                android:layout_gravity="left"
                android:text="FORECAST"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/col2"
                android:layout_width="188dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/col21"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="left"
                android:text="@string/predict_month1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/col22"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:text="13.00"
                tools:ignore="MissingConstraints" />
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/col31"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="left"
                android:text="@string/predict_month2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/col32"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:text="17.00"
                tools:ignore="MissingConstraints" />
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/col41"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="left"
                android:text="@string/predict_month3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/col42"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:text="23.00"
                tools:ignore="MissingConstraints" />
        </TableRow>

        <TableRow
            android:id="@+id/row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/col51"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="left"
                android:text="@string/predict_month4"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/col52"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:text="12.00"
                tools:ignore="MissingConstraints" />
        </TableRow>
    </TableLayout>


    </RelativeLayout>







